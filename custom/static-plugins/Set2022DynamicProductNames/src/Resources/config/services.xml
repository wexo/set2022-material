<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Set2022DynamicProductNames\Command\UpdateProductPrefixCommand">
            <argument type="service" id="Set2022DynamicProductNames\Service\ProductService"/>
            <tag name="console.command"/>
        </service>

        <service id="Set2022DynamicProductNames\Subscriber\ProductSubscriber">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="category.repository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Set2022DynamicProductNames\Service\ProductService">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="messenger.bus.shopware"/>
        </service>

        <service id="Set2022DynamicProductNames\Component\MessageQueue\ProductPrefixHandler">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="log_entry.repository"/>
            <argument type="service" id="locale.repository"/>
            <argument type="service" id="language.repository"/>
            <argument type="service" id="Shopware\Core\Framework\Api\Sync\SyncService"/>
            <tag name="messenger.message_handler"/>
        </service>

        <service id="Set2022DynamicProductNames\ScheduledTask\UpdateProductPrefixTask">
            <tag name="shopware.scheduled.task"/>
        </service>

        <service id="Set2022DynamicProductNames\ScheduledTask\UpdateProductPrefixHandler">
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="Set2022DynamicProductNames\Service\ProductService"/>
            <tag name="messenger.message_handler"/>
        </service>
    </services>
</container>
